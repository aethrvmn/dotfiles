<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>

  <menu id="root-menu" label="root-menu">

    <title label="Main Menu" />
    <item label="Steam" icon="steam">
      <action name="Execute">
        <command>
          steam
        </command>
      </action>
    </item>

    <item label="Spotify" icon="spotify">
      <action name="Execute">
        <command>
          spotify
        </command>
      </action>
    </item>
    
    <separator />
    
    <item label="Emby Theater" icon="emby-theater">
      <action name="Execute">
        <command>
          emby-theater
        </command>
      </action>
    </item>
    
    <item label="LocalSend" icon="localsend">
      <action name="Execute">
        <command>
          localsend
        </command>
      </action>
    </item>

    <separator />
    
    <item label="Firefox" icon="firefox">
      <action name="Execute">
        <command>
          firefox
        </command>
      </action>
    </item>
  
    <item label="Thunderbird" icon="thunderbird">
      <action name="Execute">
        <command>
          thunderbird
        </command>
      </action>
    </item>
   
    <separator/>
    
    <item label="Terminal" icon="alacritty">
      <action name="Execute">
        <command>
          alacritty
        </command>
      </action>
    </item>

 
    <item label="Files" icon="thunar">
      <action name="Execute">
        <command>
          thunar
        </command>
      </action>
    </item>
  
  </menu> <!-- root-menu -->

  <menu label="sys-menu" id="sys-menu">
    
    <item label="Reconfigure">
      <action name="Reconfigure"/>
    </item>
    <item label="Logout">
      <action name="Exit"></action>
    </item>
     <item label="Reboot">
      <action name="Execute" command="systemctl reboot"/>
    </item>
    <item label="Shutdown">
      <action name="Execute" command="systemctl poweroff"/>
    </item>
 
  </menu> <!-- sys-menu -->

</openbox_menu>
